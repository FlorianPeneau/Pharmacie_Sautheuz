<!-- views/ajouterOrdonnance.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Ajouter une Ordonnance</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css">
</head>
<body class="bg-gray-200">

    <div class="container mx-auto mt-8 p-8 bg-white shadow-md rounded-md">
        <h1 class="text-2xl font-bold mb-4">Ajouter une Ordonnance pour le client <%= clientId %></h1>

        <form action="/client/ajouter_ordonnance/<%= clientId %>" method="post">

            <div class="mb-4">
                <label for="medecin" class="block text-sm font-medium text-gray-600">Médecin :</label>
                <select id="medecin" name="medecin" class="mt-1 block w-full p-2 border rounded-md">
                    <% medecins.forEach(medecin => { %>
                        <option value="<%= medecin.id_medecin %>"><%= medecin.nom %></option>
                    <% }); %>
                </select>
            </div>

            <div class="mb-4">
                <label for="medicament" class="block text-sm font-medium text-gray-600">Médicament :</label>
                <select id="medicament" name="medicament" class="mt-1 block w-full p-2 border rounded-md">
                    <% medicaments.forEach(medicament => { %>
                        <option value="<%= medicament.id_medicament %>"><%= medicament.nom %></option>
                    <% }); %>
                </select>
            </div>

            <div class="mb-4">
                <label for="date_creation" class="block text-sm font-medium text-gray-600">Date de création :</label>
                <input type="date" id="date_creation" name="date_creation" class="mt-1 block w-full p-2 border rounded-md">
            </div>

            <div class="mb-4">
                <label for="duree_traitement" class="block text-sm font-medium text-gray-600">Durée du traitement (en jours) :</label>
                <input type="number" id="duree_traitement" name="duree_traitement" class="mt-1 block w-full p-2 border rounded-md">
            </div>

            <button type="submit" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-full">Ajouter Ordonnance</button>
        </form>
    </div>

</body>
</html>
