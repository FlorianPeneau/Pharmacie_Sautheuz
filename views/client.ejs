<!-- views/client.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Liste des Clients</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css">
</head>
<body class="bg-gray-100 font-sans">

    <div class="container mx-auto mt-8 p-8 bg-white rounded-lg shadow-lg">

        <h1 class="text-3xl font-bold mb-8 text-center text-blue-700">Liste des Clients</h1>

        <table class="w-full">
            <thead>
                <tr class="bg-blue-500 text-white">
                    <th class="text-left py-2">ID Client</th>
                    <th class="text-left py-2">Nom</th>
                    <th class="text-left py-2">Prénom</th>
                    <th class="text-left py-2">Année de Naissance</th>
                    <th class="text-left py-2">Numéro de Sécurité Sociale</th>
                    <th class="text-left py-2">Nom de Mutuelle</th>
                    <th class="text-left py-2">Numéro de Mutuelle</th>
                    <th class="text-left py-2">Actions</th>
                </tr>
            </thead>
            <tbody>
                <% clients.forEach(client => { %>
                    <tr class="hover:bg-gray-200 transition duration-300">
                        <td class="py-2"><%= client.id_client %></td>
                        <td class="py-2"><%= client.nom %></td>
                        <td class="py-2"><%= client.prenom %></td>
                        <td class="py-2"><%= client.annee_naissance %></td>
                        <td class="py-2"><%= client.num_secu_sociale %></td>
                        <td class="py-2"><%= client.mutuelle_nom %></td>
                        <td class="py-2"><%= client.mutuelle_numero %></td>
                        <td class="py-2">
                            <form action="/client/supprimer/<%= client.id_client %>" method="post" class="inline">
                                <button type="submit" class="text-red-500 hover:text-red-700">&#10006;</button>
                            </form>
                            <a href="/client/modifier/<%= client.id_client %>" class="ml-2 inline">
                                <button type="button" class="text-blue-500 hover:text-blue-700">&#9998;</button>
                            </a>
                            <a href="/client/ordonnance/<%= client.id_client %>" title="Ordonnance" class="ml-2 inline">
                                <button type="button" class="text-green-500 hover:text-green-700">&#128196;</button>
                            </a>
                        </td>
                    </tr>
                <% }); %>
            </tbody>
        </table>

        <h1 class="text-3xl font-bold mt-8 mb-4 text-center text-blue-700">Ajouter un client :</h1>
        <form action="/client/ajouter" method="get" class="text-center">
            <button type="submit" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-full">Ajouter un client</button>
        </form>

    </div>

</body>
</html>
