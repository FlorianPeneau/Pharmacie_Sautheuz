<!-- Modifier un Client -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Modifier un Client</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css">
</head>
<body class="bg-gray-100 font-sans">

    <div class="container mx-auto mt-8 p-8 bg-white rounded-lg shadow-lg">

        <h1 class="text-3xl font-bold mb-8 text-center text-blue-700">Modifier un Client</h1>

        <form action="/client/modifier/<%= client.id_client %>" method="post" class="text-center">

            <label for="nom" class="block text-sm font-medium text-gray-600">Nom :</label>
            <input type="text" id="nom" name="nom" placeholder="Nom" value="<%= client.nom %>" class="mt-1 p-2 border border-gray-300 rounded-md w-full" required>

            <label for="prenom" class="block mt-4 text-sm font-medium text-gray-600">Prénom :</label>
            <input type="text" id="prenom" name="prenom" placeholder="Prénom" value="<%= client.prenom %>" class="mt-1 p-2 border border-gray-300 rounded-md w-full" required>

            <label for="annee_naissance" class="block mt-4 text-sm font-medium text-gray-600">Année de Naissance :</label>
            <input type="text" id="annee_naissance" name="annee_naissance" placeholder="Année de naissance" value="<%= client.annee_naissance %>" class="mt-1 p-2 border border-gray-300 rounded-md w-full" required>

            <label for="num_secu_sociale" class="block mt-4 text-sm font-medium text-gray-600">Numéro de Sécurité Sociale :</label>
            <input type="text" id="num_secu_sociale" name="num_secu_sociale" placeholder="Numéro sécurité sociale" value="<%= client.num_secu_sociale %>" class="mt-1 p-2 border border-gray-300 rounded-md w-full" required>

            <label for="mutuelle_nom" class="block mt-4 text-sm font-medium text-gray-600">Mutuelle Nom :</label>
            <input type="text" id="mutuelle_nom" name="mutuelle_nom" placeholder="Nom mutuelle" value="<%= client.mutuelle_nom %>" class="mt-1 p-2 border border-gray-300 rounded-md w-full" required>

            <label for="mutuelle_numero" class="block mt-4 text-sm font-medium text-gray-600">Mutuelle Numéro :</label>
            <input type="text" id="mutuelle_numero" name="mutuelle_numero" placeholder="Numéro mutuelle" value="<%= client.mutuelle_numero %>" class="mt-1 p-2 border border-gray-300 rounded-md w-full" required>

            <button type="submit" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-full mt-4">Enregistrer les modifications</button>

        </form>

    </div>

</body>
</html>
